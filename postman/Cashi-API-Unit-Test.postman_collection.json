{
  "info": {
    "name": "Cashi API Unit Tests (Users & Auth)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Complete success & client error test scenarios for UsersService and AuthenticationService"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Register - Success",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{local_url}}/api/users/register",
              "host": ["{{local_url}}"],
              "path": ["api", "users", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@mail.com\",\n  \"password\": \"password123\",\n  \"fullname\": \"Test User\",\n  \"username\": \"testuser\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.response.to.have.status(201);",
                  "pm.expect(pm.response.json().status).to.eql('success');"
                ]
              }
            }
          ]
        },
        {
          "name": "Register - Client Error (Missing Field)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{local_url}}/api/users/register",
              "host": ["{{local_url}}"],
              "path": ["api", "users", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"broken@mail.com\",\n  \"password\": \"password123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.expect(pm.response.code).to.be.oneOf([400,422]);",
                  "pm.expect(pm.response.json().message).to.exist;"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile - Unauthorized",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{local_url}}/api/users/profile",
              "host": ["{{local_url}}"],
              "path": ["api", "users", "profile"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.response.to.have.status(401);"]
              }
            }
          ]
        },
        {
          "name": "Get Profile - User Not Found",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer invalid_token" }
            ],
            "url": {
              "raw": "{{local_url}}/api/users/profile",
              "host": ["{{local_url}}"],
              "path": ["api", "users", "profile"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.response.to.have.status(404);",
                  "pm.expect(pm.response.json().message).to.eql('User tidak ditemukan');"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Success (Email)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{local_url}}/api/auth/login",
              "host": ["{{local_url}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identity\": \"testuser@mail.com\",\n  \"password\": \"password123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.response.to.have.status(200);",
                  "const json = pm.response.json();",
                  "pm.environment.set('accessToken', json.data.accessToken);",
                  "pm.environment.set('refreshToken', json.data.refreshToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login - Client Error (Wrong Password)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{local_url}}/api/auth/login",
              "host": ["{{local_url}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identity\": \"testuser@mail.com\",\n  \"password\": \"wrongpass\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.expect(pm.response.code).to.be.oneOf([400,401]);",
                  "pm.expect(pm.response.json().message).to.exist;"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token - Invalid",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{local_url}}/api/auth/refresh",
              "host": ["{{local_url}}"],
              "path": ["api", "auth", "refresh"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"invalid_token\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.response.to.have.status(401);"]
              }
            }
          ]
        },
        {
          "name": "Logout - Client Error (Token Not Found)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{local_url}}/api/auth/logout",
              "host": ["{{local_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"invalid_token\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.expect(pm.response.code).to.be.oneOf([200,404]);"]
              }
            }
          ]
        }
      ]
    }
  ]
}
